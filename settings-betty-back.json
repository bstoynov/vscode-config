{
  "workbench.colorCustomizations": {
    "editorBracketMatch.background": "#E4E2D2"
  },
  "editor.fontFamily": "JetBrains Mono",
  "editor.fontWeight": 700,
  "editor.fontSize": 16,
  "editor.renderWhitespace": "boundary",
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  "editor.guides.indentation": false,
  "editor.showFoldingControls": "never",
  "editor.glyphMargin": false,
  "editor.minimap.enabled": false,
  // I use this to look for file errors on the right
  // "editor.scrollbar.verticalScrollbarSize": 0,
  "editor.scrollbar.horizontalScrollbarSize": 0,
  "material-icon-theme.hidesExplorerArrows": true,
  "workbench.tree.renderIndentGuides": "none",
  "workbench.layoutControl.enabled": false,
  "workbench.editor.editorActionsLocation": "hidden",
  "window.commandCenter": false,
  "window.titleBarStyle": "custom",
  "editor.stickyScroll.enabled": false,
  "workbench.startupEditor": "none",
  "workbench.tips.enabled": false,
  "editor.cursorBlinking": "solid",
  "explorer.compactFolders": false,
  "editor.lightbulb.enabled": "off",
  // remove recently open at the top from file search
  "search.quickOpen.includeHistory": false,
  "workbench.iconTheme": "material-icon-theme",
  "explorer.confirmDragAndDrop": false,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "editor.accessibilitySupport": "off",
  "explorer.confirmDelete": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  // <Formatting>
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always"
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  // "prettier.useEditorConfig": true,
  // "editor.defaultFormatter": "esbenp.prettier-vscode",
  // </ Formatting>
  "todohighlight.keywords": [
    "BOGI",
    "BLOCK"
  ],
  "todohighlight.defaultStyle": {
    "backgroundColor": "#f00",
    "color": "#fff"
  },
  "mjml.mailjetAPIKey": "7884d8d341c1277e052629c2234b3701",
  "mjml.mailjetAPISecret": "2a85245ba1d10bac1908013fc3333ae6",
  "mjml.mailSender": "bstoynov@bettygaming.com",
  // "chat.commandCenter.enabled": false,
  // Hide .obsidian folder
  "files.exclude": {
    ".obsidian": true
  },
  "search.exclude": {
    ".obsidian": true
  },
  "[html]": {
    // "editor.defaultFormatter": "vscode.html-language-features",
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "workbench.editorAssociations": {
    "*.svg": "default"
  },
  "gitlens.views.scm.grouped.views": {
    "commits": true,
    "branches": true,
    "remotes": true,
    "stashes": true,
    "tags": true,
    "worktrees": true,
    "contributors": true,
    "fileHistory": false,
    "repositories": true,
    "searchAndCompare": true,
    "launchpad": false
  },
  "[typescript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "prettier.printWidth": 80,
    "prettier.proseWrap": "always",
    // "editor.rulers": [
    //   80
    // ]
  },
  "workbench.colorTheme": "Sedona Sunset",
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "markup.bold.markdown",
        "settings": {
          "foreground": "#643ab1",
        }
      }
    ]
  }
}